# ============================================================
# The Bake Story - Environment Configuration
# Copy this file to .env and fill in your actual values
# ============================================================

# ─── Django Core ──────────────────────────────────────────────
DEBUG=False
SECRET_KEY=your-very-secret-key-here-use-at-least-50-characters

# ─── Allowed Hosts ────────────────────────────────────────────
# Add your domain and IP addresses (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-vps-ip,localhost,127.0.0.1

# ─── CORS & CSRF Settings ─────────────────────────────────────
# Add your frontend origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://yourdomain.com,https://yourdomain.com,http://www.yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://yourdomain.com,https://yourdomain.com,http://www.yourdomain.com,https://www.yourdomain.com

# ─── Database (Optional - leave empty for SQLite) ────────────
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# ─── SSL/HTTPS Settings (Enable after SSL certificate setup) ──
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ─── Admin Email ──────────────────────────────────────────────
ADMIN_EMAIL=your-email@example.com

# ─── Razorpay Payment Gateway ─────────────────────────────────
# Get from: https://dashboard.razorpay.com → Settings → API Keys
# Use TEST keys for testing, LIVE keys for production
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ─── GROQ API for Chatbot ─────────────────────────────────────
# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ─── AWS Configuration (Optional) ─────────────────────────────
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_REGION_NAME=us-east-1
